// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "'FiraCode-Retina', 'Fira Code Medium', 'Ubuntu Mono', 'Input Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.fontLigatures": true,
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "editor.wordWrap": "on",
    "rust.mode": "rls",
    "rust.rustup": {
        "nightlyToolchain": "nightly-x86_64-apple-darwin"
    },
    "rust.rls": {
        "useRustfmt": true
    },
    "extensions.ignoreRecommendations": false,
    "python.disablePromptForFeatures": [
        "pylint"
    ],
    "explorer.confirmDragAndDrop": false,
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[typescript]": {
        "editor.tabSize": 4
    },
    "terminal.integrated.fontLigatures": true,
    "editor.fontWeight": "500",
    "workbench.iconTheme": "vscode-icons",
    "editor.suggestSelection": "first",
    "editor.suggest.showStatusBar": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "aws.samcli.location": "/usr/local/bin/sam",
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "explorer.confirmDelete": false,
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "java.errors.incompleteClasspath.severity": "ignore",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter-notebook",
            "filenamePattern": "*.ipynb"
        }
    ],
    "python.insidersChannel": "weekly",
    "python.languageServer": "Pylance",
    "sync.gist": "08d475c869608daa729ff5f7ad799e76",
    "workbench.colorTheme": "Palenight (Mild Contrast)"
}